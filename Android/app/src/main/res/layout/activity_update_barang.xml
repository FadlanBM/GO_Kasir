<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.barang.UpdateBarangActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:id="@+id/ll_karyawan_1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/btnRowBack"
            android:src="@drawable/baseline_keyboard_arrow_left_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Barang"
            android:fontFamily="@font/poppinsbold"
            android:layout_margin="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_karyawan_1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/_230sdp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_20sdp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tiCodeBarang"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Code Barang Produk" />
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/btnUpdateQR"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/qr_code"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiMerek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Merek Produk" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiNamaProduk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nama Produk"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiHargaProduk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:hint="Harga Produk"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiStokProduk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="Stok Produk" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiTipeProduk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Tipe Produk"/>
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="@dimen/_20sdp"
        app:cornerRadius="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:id="@+id/btnSubmit"
        android:text="Submit"/>
</RelativeLayout>